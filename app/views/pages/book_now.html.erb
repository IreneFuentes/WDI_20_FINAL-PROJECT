<!-- subheader -->
<section id="subheader" class="subh-center" data-stellar-background-ratio=".2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Book Now</h1>
        <h4>Make a New Appointment</h4>
      </div>
    </div>
  </div>
</section>
<!-- subheader close -->
<div class="spacer-double"></div>
<%= form_tag(booking_create_path, method: :post) do %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="col-md-12">
          <h4>Prefered Date &amp; Time</h4>
          <div class="tiny-border"><span></span></div>
          <div class="row">
            <div class="col-md-6">
              <input type='text' name='booking[date]' id='date' class="form-control" placeholder="select date">
            </div>
            <div class="col-md-6">
              <select name="booking[time]" id="time" class="form-control">
                <option value="08:00">08:00</option>
                <option value="09:00">09:00</option>
                <option value="10:00">10:00</option>
                <option value="11:00">11:00</option>
                <option value="12:00">12:00</option>
                <option value="13:00">13:00</option>
                <option value="14:00">14:00</option>
                <option value="15:00">15:00</option>
                <option value="16:00">16:00</option>
                <option value="17:00">17:00</option>
                <option value="18:00">18:00</option>
                <option value="19:00">19:00</option>
                <option value="20:00">20:00</option>
              </select>
            </div>
          </div>
        </div>

        <div class="col-md-12">
          <h4>Massage Type</h4>
          <div class="tiny-border"><span></span></div>
          <div class="row">
            <div class="col-md-12">
              <select name="booking[massage_type]" id="type" class="form-control">
                <option value="Esalen Massage">Esalen Massage</option>
                <option value="Hawaiian massage">Hawaiian Massage</option>
                <option value="Swedish massage">Swedish Massage</option>
              </select>
            </div>
          </div>
        </div>

        <div class="col-md-12">
          <h4>Notes</h4>
          <div class="tiny-border"><span></span></div>
          <div id='message_error' class='error'>Please enter your message.</div>
          <div>
            <textarea name='booking[note]' id='note' class="form-control" placeholder="Your Note"></textarea>
          </div>
        </div>
      </div>

      <div class="spacer-double"></div>

      <div class="col-md-4 col-md-offset-4 text-center">
        <p id='submit'>
          <input type='submit' value='Book Now!' class="btn btn-custom fullwidth">
        </p>
      </div>
    </div>
  </div>
<% end %>


<script type="text/javascript">
// Si no sabes que son las opciones las tienes aqui
// https://bootstrap-datepicker.readthedocs.io/en/latest/options.html
  $('#date').datepicker({
    format: "dd/mm/yyyy",
    weekStart: 1,
    startDate: "today",
    maxViewMode: 0,
    autoclose: true,
    todayHighlight: true,
    // datesDisabled: ['12/07/2016', '21/08/2016']
});
</script>
