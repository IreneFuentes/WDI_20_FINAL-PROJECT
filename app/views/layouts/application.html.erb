<!DOCTYPE html>
<html>
<head>
  <title>WDI20FinalProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="homepage">

  <div id="wrapper">

    <!-- header begin -->
    <header class="header_center">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!-- small button begin -->
            <span id="menu-btn"></span>
            <!-- small button close -->

            <!-- mainmenu begin -->
            <nav>
              <ul id="mainmenu">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to 'Why?', page_path('why') %></li>
                <li><%= link_to 'Pricing', page_path('pricing') %></li>
                <li><%= link_to 'About', page_path('about') %></li>
                <li><%= link_to 'Comments', comments_path %></li>
                <li>
                <% if user_signed_in? %>
                  <a href="#"><%= current_user.name %></a>
                  <ul>
                    <li><%= link_to 'Settings', edit_user_registration_path %></li>
                    <li><%= link_to 'Book Now', page_path('book_now') %></li>
                    <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                  </ul>
                  <% else %>
                  <a href="#">User</a>
                  <ul>
                    <li><%= link_to 'Login', new_user_session_path %></li>
                    <li><%= link_to 'Register', new_user_registration_path %></li>
                  </ul>
                  <% end %>
                </li>
                <% if user_signed_in? && current_user.has_role?(:admin) %>
                 <li><%= link_to 'Admin', admin_panel_path %>
                   <ul>
                     
                    <li><%= link_to 'Users', admin_users_path %></li>
                    <li><%= link_to 'Bookings', admin_bookings_path %></li>
                    <li><%= link_to 'Comments', admin_comments_path %></li>
                   </ul>

                 </li>

                 <% end %>
              </ul>
            </nav>
            <div class="clearfix"></div>
          </div>
          <!-- mainmenu close -->

        </div>
      </div>
    </header>
    <!-- header close -->

    <!-- content begin -->
    <div id="content" class="no-bottom no-top">
      <%= yield %>
    </div>




    <!-- footer begin -->
    <footer>
      <div class="container">
        <div class="row">

          

          <div class="col-md-4">
            <div class="widget">
              <h3>We're Open</h3>
              <div class="box-border double">
                <ul class="list-border-bottom">
                  <li>
                    <span class="pull-left">Monday - Friday</span>
                    <span class="pull-right id-color">9 am to 8 pm</span>
                    <div class="clearfix"></div>
                  </li>
                  <li>
                    <span class="pull-left">Saturday</span>
                    <span class="pull-right id-color">9 am to 8 pm</span>
                    <div class="clearfix"></div>
                  </li>
                 <!--  <li>
                    <span class="pull-left">Sunday &amp; Holiday</span>
                    <span class="pull-right id-color">8 am to 12 pm</span>
                    <div class="clearfix"></div>
                  </li> -->
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-4 col-md-offset-4">
            <div class="widget widget-address">
              <h3>Contact Us</h3>

              <address>
                <span>West London Buddhist Centre, 45a Porchester Rd, W25DP, London</span>
                <span><strong>Phone:</strong>07463370545</span>
                
                <span><strong>Email:</strong><a href="mardegran@gmail.com">mardegran@gmail.com</a></span>
                <span><strong>Web:</strong><a href="#">http://www.californianmassage.co.uk/</a></span>
              </address>
            </div>
          </div>


        </div>
      </div>

      <div class="subfooter">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              &copy; Copyright 2016                      
            </div>
            <div class="col-md-6 text-right">
              <div class="social-icons">
                <a href="#"><i class="fa fa-facebook fa-lg"></i></a>
                <a href="#"><i class="fa fa-twitter fa-lg"></i></a>
                
              </div>
            </div>
          </div>
        </div>
      </div>

    </footer>
    <!-- footer close -->
  </div>



</body>
</html>
