<!-- subheader -->
<section id="subheader" class="subh-center" >
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Forgot your password?</h1>
      </div>
    </div>
  </div>
</section>
<!-- subheader close -->
<br>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="panel panel-default">
        <div class="panel-heading">
         <h3 class="panel-title">Forgot your password?</h3>
        </div>
      <div class="panel-body">
       <div class="col-xs-12">

        <div class="form-group">
          <%= f.label :email, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
           <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="panel-footer">
         <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
        </div>
      </div>
    </div>


    <% end %>
</div>


  </div>
 </div> 
</div> 

<%= render "devise/shared/links" %>


