<!-- subheader -->
<section id="subheader" class="subh-center" data-stellar-background-ratio=".2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Bookings</h1>
      </div>
    </div>
  </div>
</section>
<!-- subheader close -->
<br>
<br>
<div class="container">
<div class="row">
  
  <div class="col-md-8 col-md-offset-2">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class='row'>
    <div class='col-md-4'>
        <%= image_tag resource.avatar.url(:thumb), class: 'media-object img-circle' %>
        <br>
        <%= f.file_field :avatar  %>
    </div>
    <div class='col-md-8'>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %><br />
      <%= f.label :email %><br />
      <%= f.email_field :email %><br />
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %><br />
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %><br />
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %><br><br>
      <%= f.submit "Save", class: 'btn btn-default' %>
    </div>
  </div>

  <% end %>

<br>
<br>
<h3><a name="bookings"></a>BOOKINGS</h3>

<% if notice %>
<div class="alert alert-success" role="alert">
  <%= notice %>
</div>
<% end %>
<% if alert %>
<div class="alert alert-danger" role="alert">
  <%= alert %>
</div>
<% end %>


  <table class="table table-hover table-striped table-bordered"> 
    <thead> 
      <tr> 
         
        <th>Date</th> 
        <th>Time</th> 
        <th>Massage Type</th> 
        <th>Status</th> 
      </tr> 
    </thead>
    <tbody> 
    <% resource.bookings.each do |booking| %>

     <tr> 
      
       <td><%= booking.date.strftime("%d/%m/%Y") %></td>
       <td><%= booking.time %></td> 
       <td><%= booking.massage_type %></td> 
       <td><%= status_label(booking.status) %></td>
     </tr>
      <% end %> 
  </tbody>
</table>

</div>
</div>
</div>




